<div class="card-container">
  <h1 class="card-title">Editar mentoría</h1>
  <form action="/mentorings/edit/{{mentoring.id}}?_method=PUT" method="POST">
    <input type="hidden" name="_method" value="PUT">
    <div class="form-group">
      <label class="form-label">Carrera</label>
      <input type="text" name="mentoringClass" class="form-input" value="{{mentoring.mentoringClass}}">
    </div>
    <div class="form-group">
      <label class="form-label">Tema</label>
      <input type="text" name="mentoringTopic" class="form-input" value="{{mentoring.mentoringTopic}}">
    </div>
    <div class="form-group">
      <label class="form-label">Horario disponible</label>
      <input type="text" name="mentoringAvailability" class="form-input" value="{{mentoring.mentoringAvailability}}">
    </div>
    <div class="form-group">
      <label class="form-label">Descripción</label>
      <textarea name="mentoringDescription" class="form-input">{{mentoring.mentoringDescription}}</textarea>
    </div>
    
    <button class="btn btn-info" type="submit">Editar mentoría</button>
  </form>
</div>
